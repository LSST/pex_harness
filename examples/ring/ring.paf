#
# ring.paf
#
localLogMode: true
executionMode: "oneloop"
logThreshold: -3
eventBrokerHost: "lsst4.ncsa.uiuc.edu"

shareDataOn: true

topology: {
    type: "ring"
    param1: "clockwise"
    # param1: "counterclockwise"
}

appStage: {
    name: "SyncSetupStage"
    serialClass: "lsst.pexhexamples.apps.SyncSetupStageSerial"
    parallelClass: "lsst.pexhexamples.apps.SyncSetupStageParallel"
    eventTopic: "None"
    stagePolicy: "None"
    shareData: false
}


appStage: {
    name: "SyncTestStage"
    serialClass: "lsst.pexhexamples.apps.SyncTestStageSerial"
    parallelClass: "lsst.pexhexamples.apps.SyncTestStageParallel"
    eventTopic: "None"
    stagePolicy: "None"
    shareData: true
}

